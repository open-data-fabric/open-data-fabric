{
  "$id": "http://open-data-fabric.github.com/schemas/DatasetSnapshot",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Represents a snapshot of the dataset definition in a single point in time.\nThis type is typically used for defining new datasets and changing the existing ones.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "kind",
    "metadata"
  ],
  "properties": {
    "name": {
      "type": "string",
      "format": "dataset-name",
      "description": "Alias of the dataset."
    },
    "kind": {
      "$ref": "/schemas/DatasetKind",
      "description": "Type of the dataset."
    },
    "metadata": {
      "type": "array",
      "items": {
        "$ref": "/schemas/MetadataEvent"
      }
    }
  }
}