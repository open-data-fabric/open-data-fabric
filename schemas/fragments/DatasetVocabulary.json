{
  "$id": "http://open-data-fabric.github.com/schemas/DatasetVocabulary",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Specifies the mapping of system columns onto dataset schema.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "offsetColumn",
    "operationTypeColumn",
    "systemTimeColumn",
    "eventTimeColumn"
  ],
  "properties": {
    "offsetColumn": {
      "type": "string",
      "default": "offset",
      "description": "Name of the offset column."
    },
    "operationTypeColumn": {
      "type": "string",
      "default": "op",
      "description": "Name of the operation type column."
    },
    "systemTimeColumn": {
      "type": "string",
      "default": "system_time",
      "description": "Name of the system time column."
    },
    "eventTimeColumn": {
      "type": "string",
      "default": "event_time",
      "description": "Name of the event time column."
    }
  }
}