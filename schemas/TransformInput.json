{
  "$id": "http://open-data-fabric.github.com/schemas/TransformInput",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Describes a derivative transformation input",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "dataset-id",
      "description": "Unique dataset identifier. This field is required in metadata blocks and can be empty only in a DatasetSnapshot."
    },
    "name": {
      "type": "string",
      "format": "dataset-name",
      "description": "An alias of this input to be used in queries."
    }
  }
}